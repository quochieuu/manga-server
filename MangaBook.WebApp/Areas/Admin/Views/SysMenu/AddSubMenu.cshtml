@model MangaBook.Data.Entities.SysMenu
@{
    ViewData["Title"] = "AddSubMenu";
}
<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@Model.Name</h2>
                                    <p>Thêm submenu cho @Model.Name</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="notika-icon notika-sent"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <form asp-action="AddSubMenu">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="@Model.Name" class="form-control" readonly="readonly" />
                                    <div class="form-group nk-int-st">
                                        <label class="control-label">Sub Menu Name</label>
                                        <input type="text" id="subMenu" name="subMenu" class="form-control" />
                                    </div>
                                    <div class="form-group nk-int-st">
                                        <label class="control-label">Sub Menu Link</label>
                                        <input type="text" id="subMenuLink" name="subMenuLink" class="form-control" />
                                    </div>
                                    <div class="form-group nk-int-st">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

