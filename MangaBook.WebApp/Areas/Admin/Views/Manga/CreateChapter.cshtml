@model MangaBook.Data.Entities.Chapter

@{
    ViewData["Title"] = "CreateChapter";
}

<h2>CreateChapter</h2>

<h4>Chapter</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateChapter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" type="number" class="form-control" id="post__content-create"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!--  summernote JS
    ============================================ -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="~/lib/summernote/summernote.min.js"></script>
   
    <script>
        $(document).ready(function () {
            $(function () {
                $('#post__content-create').summernote({
                    height: 520,
                });
            });
        });
    </script>

}